<!DOCTYPE html>
<html lang="en">
<head>  
<title>Application Bot Preview</title>
</head>
<style>
  html, body, .wrapper {
    height: 100%;
    margin:0;
    padding:0;
    font-family:Arial, Helvetica, sans-serif
  }

  .loader {
    width:100%;
    text-align: center;
    padding-top: 100px;
  }
</style>
<body>
  <div class="wrapper" id="wrapper">
    <div class="loader">Preview In progress...</div>
  </div>
<script>
  const iframe = (url)=>`<iframe src="${url}" style="border:0; width:100%; height:100%" ></iframe>`; 
  const urlParams = new URLSearchParams(window.location.search);
  var FINEGUIDE_CHATBOT_ID = urlParams.get('id');
  const url = urlParams.get('url');

  if (FINEGUIDE_CHATBOT_ID && url) {
    const wrapper = document.getElementById('wrapper');
    wrapper.innerHTML = iframe(url)
  }
  
</script>
<script src="https://cdn.fineguide.ai/fineguide.min.js"></script>
</body>
</html>